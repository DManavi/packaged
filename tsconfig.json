{
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true
  },
  "exclude": ["dist/**", "node_modules/**"]
}
