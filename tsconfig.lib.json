{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/out-tsc",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
